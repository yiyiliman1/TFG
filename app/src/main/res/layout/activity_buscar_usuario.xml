<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F0F0">

    <!-- Buscador -->
    <EditText
        android:id="@+id/inputBusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar usuario..."
        android:background="@drawable/edittext_borde"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:inputType="text" />

    <!-- Lista de resultados de búsqueda -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />

    <!--  Título de sección de chats privados -->
    <TextView
        android:id="@+id/textChatsPrivados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chats activos"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp" />

    <!--  Lista de chats privados activos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChatsPrivados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="ifContentScrolls" />

</LinearLayout>

